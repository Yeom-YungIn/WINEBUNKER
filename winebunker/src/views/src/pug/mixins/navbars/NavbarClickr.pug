mixin NavbarClickr
  script(src='https://code.jquery.com/jquery-3.6.0.min.js')
  nav.navbar.navbar-expand-lg.navbar-light.fixed-top.py-3.d-block(data-navbar-on-scroll)
    .container
      a.navbar-brand.d-inline-flex(href= '/')
        img.card-img(src=`${CWD}assets/img/gallery/logo.png`  alt='...')
      button.navbar-toggler.collapsed(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse.border-top.border-lg-0.mt-4.mt-lg-0
        ul.navbar-nav.ms-auto.mb-2.mb-lg-0
          form(action="/registe" method="GET")
            div.input-group-append.input-group-sm.col-20.px-2.py-2
              button#registe(type="submit" class="btn btn-outline-secondary mb-0" style="height: calc(8vh + 4px); display:block") 등록
            script.
              $('#registe').on('click', function () {
                $('.loading-spinner').show(); // show loading spinner
              })
            .loading-spinner(style="display: none")
          form(action="/extract" method="POST" enctype="multipart/form-data")
            div.input-group-append.input-group-sm.col-20.px-2.py-2
              label(for="imageInput" class="btn btn-outline-secondary mb-0" )
                i.fa.fa-image
                input#imageInput(type="file" name="image" style="height: calc(4vh + 4px); display:none" accept="image/*")
                button#imageUpload(type="submit" class="btn btn-outline-secondary btn-sm mb-0" style="display:block") 이미지 검색
                  script.
                    $('#imageUpload').on('click', function () {
                      $('.loading-spinner').show(); // show loading spinner
                    })
                .loading-spinner(style="display: none")
